<%- include('partials/layoutStart', {
  pageTitle: 'Logowanie',
  metaDescription: 'Zaloguj się do Czytaj24 i kontynuuj zakupy.',
  showSearch: false,
  bodyClass: 'min-h-screen flex items-center justify-center bg-slate-50 text-slate-900 dark:bg-slate-950 dark:text-slate-50',
  wrapperClass: 'w-full'
}) %>

<main class="mx-auto w-full max-w-5xl px-4 py-10">
  <div class="grid gap-10 md:grid-cols-2">
    <section class="space-y-6">
      <p class="text-xs uppercase tracking-[0.4em] text-brand">Witaj ponownie</p>
      <h1 class="font-display text-3xl leading-tight text-slate-900 dark:text-white">Twoje konto Czytaj24</h1>
      <p class="text-sm text-slate-600 dark:text-slate-300">
        Zaloguj się, aby kontynuować zakupy, śledzić zamówienia i pokazać pełny flow e‑commerce w portfolio.
      </p>
      <ul class="space-y-3 text-sm text-slate-600 dark:text-slate-300">
        <li class="flex gap-3"><span class="text-brand">•</span> Sesje z Mongo Store</li>
        <li class="flex gap-3"><span class="text-brand">•</span> Historia i statusy zamówień</li>
        <li class="flex gap-3"><span class="text-brand">•</span> Synchronizacja koszyka między urządzeniami</li>
      </ul>
      <div class="rounded-2xl border border-slate-200/70 p-6 dark:border-white/10">
        <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-700 dark:text-slate-200">Dlaczego warto?</h2>
        <p class="mt-2 text-sm text-slate-600 dark:text-slate-400">Pokazuje implementację logowania, sesji i integrację z koszykiem w czystym Node + Mongo.</p>
      </div>
    </section>
    <section class="rounded-3xl border border-slate-200/70 bg-white p-8 shadow-soft dark:border-white/10 dark:bg-slate-900">
      <h2 class="text-xl font-semibold text-slate-900 dark:text-white">Logowanie</h2>
      <form action="/login" method="POST" class="mt-6 space-y-5">
        <div>
          <label for="email" class="block text-xs font-medium uppercase tracking-wide text-slate-600 dark:text-slate-300">Email</label>
          <input
            id="email"
            type="email"
            name="email"
            autocomplete="email"
            value="<%= values?.email || '' %>"
            class="mt-2 w-full rounded-2xl border border-slate-300 bg-white px-4 py-3 text-sm text-slate-900 shadow-sm transition placeholder:text-slate-400 focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand dark:border-slate-700 dark:bg-slate-800 dark:text-slate-100"
          />
          <% if (errors?.email) { %>
            <p class="mt-2 text-xs font-medium text-rose-600 dark:text-rose-200"><%= errors.email %></p>
          <% } %>
        </div>
        <div>
          <label for="password" class="block text-xs font-medium uppercase tracking-wide text-slate-600 dark:text-slate-300">Hasło</label>
          <input
            id="password"
            type="password"
            name="password"
            autocomplete="current-password"
            class="mt-2 w-full rounded-2xl border border-slate-300 bg-white px-4 py-3 text-sm text-slate-900 shadow-sm transition placeholder:text-slate-400 focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand dark:border-slate-700 dark:bg-slate-800 dark:text-slate-100"
          />
          <% if (errors?.password) { %>
            <p class="mt-2 text-xs font-medium text-rose-600 dark:text-rose-200"><%= errors.password %></p>
          <% } %>
        </div>
        <% if (errors?.general) { %>
          <div class="rounded-2xl border border-rose-300/40 bg-rose-50 px-4 py-3 text-sm text-rose-600 dark:border-rose-500/40 dark:bg-rose-500/20 dark:text-rose-200">
            <p><%= errors.general %></p>
          </div>
        <% } %>
        <button
          type="submit"
          class="w-full rounded-full bg-brand px-6 py-3 text-sm font-semibold uppercase tracking-wide text-white shadow shadow-orange-500/40 transition hover:bg-brand-dark focus:outline-none focus:ring-2 focus:ring-brand focus:ring-offset-2 focus:ring-offset-white dark:focus:ring-offset-slate-900"
        >
          Zaloguj się
        </button>
      </form>
      <p class="mt-6 text-center text-sm text-slate-600 dark:text-slate-400">
        Nie masz konta?
        <a href="/register" class="font-semibold text-slate-900 underline decoration-brand/40 underline-offset-4 hover:text-brand dark:text-slate-100 dark:hover:text-brand">Zarejestruj się</a>
      </p>
    </section>
  </div>
</main>

<%- include('partials/layoutEnd') %>
