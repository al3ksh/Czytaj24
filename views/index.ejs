    <%- include('partials/collectionRow', { title: 'Bestsellery spo≈Çeczno≈õci', eyebrow: 'Popularne', books: collections?.topRated || [], ctaCategory: 'Przygodowe' }) %>
    <%- include('partials/collectionRow', { title: 'Sezonowe promocje', eyebrow: 'Promocje', books: collections?.promoPicks || [], ctaCategory: '' }) %>
    <%- include('partials/collectionRow', { title: 'Ostatnie sztuki', eyebrow: 'Low stock', books: collections?.lowStock || [], ctaCategory: '' }) %>
  </section>
</main>

