<%- include('../partials/layoutStart', {
  pageTitle: 'Zam√≥wienia - Admin',
  metaDescription: 'ZarzƒÖdzanie zam√≥wieniami w ksiƒôgarni Czytaj24',
  showSearch: false,
  bodyClass: 'min-h-screen bg-slate-50 text-slate-900 dark:bg-slate-950 dark:text-slate-50',
  wrapperClass: 'min-h-screen',
  userName
}) %>

<main class="mx-auto max-w-7xl px-4 py-10">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <p class="text-xs uppercase tracking-[0.4em] text-brand">Admin Panel</p>
      <h1 class="font-display text-3xl text-slate-900 dark:text-white">ZarzƒÖdzanie zam√≥wieniami</h1>
    </div>
    <a href="/admin" class="text-sm text-slate-500 hover:text-slate-900 dark:text-slate-400 dark:hover:text-white">‚Üê Dashboard</a>
  </div>

  <div class="glass-panel overflow-hidden">
    <% if (orders.length === 0) { %>
      <div class="p-10 text-center">
        <p class="text-lg font-semibold text-slate-900 dark:text-white">Brak zam√≥wie≈Ñ</p>
        <p class="mt-2 text-sm text-slate-500 dark:text-slate-400">Zam√≥wienia klient√≥w pojawiƒÖ siƒô tutaj.</p>
      </div>
    <% } else { %>
      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead class="border-b border-slate-200 bg-slate-100/50 dark:border-slate-700 dark:bg-slate-800/50">
            <tr class="text-left">
              <th class="px-4 py-3 font-semibold text-slate-700 dark:text-slate-300">ID</th>
              <th class="px-4 py-3 font-semibold text-slate-700 dark:text-slate-300">U≈ºytkownik</th>
              <th class="px-4 py-3 font-semibold text-slate-700 dark:text-slate-300">Data</th>
              <th class="px-4 py-3 font-semibold text-slate-700 dark:text-slate-300">Kwota</th>
              <th class="px-4 py-3 font-semibold text-slate-700 dark:text-slate-300">Metoda p≈Çatno≈õci</th>
              <th class="px-4 py-3 font-semibold text-slate-700 dark:text-slate-300">Status</th>
              <th class="px-4 py-3 font-semibold text-slate-700 dark:text-slate-300">Akcje</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
            <% orders.forEach(order => { %>
              <tr class="hover:bg-slate-50 dark:hover:bg-slate-900/50">
                <td class="px-4 py-4">
                  <p class="font-mono text-xs text-slate-600 dark:text-slate-400"><%= order._id.toString().slice(-8) %></p>
                </td>
                <td class="px-4 py-4">
                  <% if (order.customerInfo) { %>
                    <p class="font-medium text-slate-900 dark:text-white"><%= order.customerInfo.name %></p>
                    <p class="text-xs text-slate-500 dark:text-slate-400"><%= order.customerInfo.phone %></p>
                  <% } else { %>
                    <p class="font-medium text-slate-900 dark:text-white"><%= order.customerName || order.name || 'N/A' %></p>
                    <p class="text-xs text-slate-500 dark:text-slate-400"><%= order.customerEmail || '' %></p>
                  <% } %>
                </td>
                <td class="px-4 py-4 text-slate-600 dark:text-slate-400">
                  <%= new Date(order.date || order.createdAt).toLocaleDateString('pl-PL') %>
                  <br>
                  <span class="text-xs"><%= new Date(order.date || order.createdAt).toLocaleTimeString('pl-PL') %></span>
                </td>
                <td class="px-4 py-4">
                  <p class="font-semibold text-slate-900 dark:text-white">
                    <%= (order.total || order.subtotal || 0).toFixed(2) %> PLN
                  </p>
                  <p class="text-xs text-slate-500 dark:text-slate-400">
                    <%= order.items?.length || 0 %> pozycji
                    <% if (order.deliveryCost) { %> + dostawa (<%= order.deliveryCost.toFixed(2) %> PLN)<% } %>
                  </p>
                </td>
                <td class="px-4 py-4 text-slate-600 dark:text-slate-400">
                  <% if (order.paymentMethod === 'card') { %>
                    Karta
                    <% if (order.paymentDetails && order.paymentDetails.lastFourDigits) { %>
                      <br><span class="text-xs">****<%= order.paymentDetails.lastFourDigits %></span>
                    <% } %>
                  <% } else if (order.paymentMethod === 'blik') { %>
                    BLIK
                  <% } else if (order.paymentMethod === 'cash') { %>
                    Got√≥wka
                  <% } else if (order.payment) { %>
                    <%= order.payment === 'card' ? 'Karta' : order.payment === 'transfer' ? 'Przelew' : order.payment %>
                  <% } else { %>
                    N/A
                  <% } %>
                </td>
                <td class="px-4 py-4">
                  <form action="/admin/orders/<%= order._id %>/status" method="POST" class="inline-block">
                    <select 
                      name="status" 
                      onchange="this.form.submit()"
                      class="cursor-pointer rounded-lg border-0 px-3 py-2 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-brand focus:ring-offset-1 <%= 
                        order.status === 'delivered' ? 'bg-emerald-100 text-emerald-800 hover:bg-emerald-200 dark:bg-emerald-500/20 dark:text-emerald-300 dark:hover:bg-emerald-500/30' : 
                        order.status === 'cancelled' ? 'bg-rose-100 text-rose-800 hover:bg-rose-200 dark:bg-rose-500/20 dark:text-rose-300 dark:hover:bg-rose-500/30' :
                        order.status === 'shipped' ? 'bg-indigo-100 text-indigo-800 hover:bg-indigo-200 dark:bg-indigo-500/20 dark:text-indigo-300 dark:hover:bg-indigo-500/30' :
                        order.status === 'processing' ? 'bg-amber-100 text-amber-800 hover:bg-amber-200 dark:bg-amber-500/20 dark:text-amber-300 dark:hover:bg-amber-500/30' :
                        'bg-sky-100 text-sky-800 hover:bg-sky-200 dark:bg-sky-500/20 dark:text-sky-300 dark:hover:bg-sky-500/30'
                      %>"
                    >
                      <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>‚è±Ô∏è OczekujƒÖce</option>
                      <option value="processing" <%= order.status === 'processing' ? 'selected' : '' %>>‚öôÔ∏è W realizacji</option>
                      <option value="shipped" <%= order.status === 'shipped' ? 'selected' : '' %>>üöö Wys≈Çane</option>
                      <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %>>‚úÖ Dostarczone</option>
                      <option value="cancelled" <%= order.status === 'cancelled' ? 'selected' : '' %>>‚ùå Anulowane</option>
                    </select>
                  </form>
                </td>
                <td class="px-4 py-4">
                  <button 
                    type="button"
                    class="order-details-btn rounded-lg bg-slate-600 px-3 py-1.5 text-xs font-semibold text-white hover:bg-slate-700"
                    data-order='<%- JSON.stringify({
                      id: order._id,
                      date: order.date || order.createdAt || null,
                      customer: order.customerInfo ? {
                        name: order.customerInfo.name,
                        phone: order.customerInfo.phone,
                        address: order.customerInfo.address
                      } : {
                        name: (order.customerName || order.name || 'N/A'),
                        phone: order.customerPhone || '',
                        address: { street: (order.address || ''), city: (order.city || ''), postalCode: (order.postalCode || '') }
                      },
                      delivery: order.delivery || null,
                      deliveryCost: order.deliveryCost || 0,
                      paymentMethod: order.paymentMethod || order.payment || null,
                      paymentLast4: order.paymentDetails && order.paymentDetails.lastFourDigits ? order.paymentDetails.lastFourDigits : null,
                      items: (order.items || []).map(i => ({ title: i.title, quantity: i.quantity, price: i.price })),
                      total: (order.total || order.subtotal || 0)
                    }) %>'
                  >
                    Szczeg√≥≈Çy
                  </button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <div class="border-t border-slate-200 bg-slate-50/50 px-4 py-3 text-sm text-slate-600 dark:border-slate-700 dark:bg-slate-800/50 dark:text-slate-400">
        ≈ÅƒÖcznie: <strong><%= orders.length %></strong> zam√≥wie≈Ñ
      </div>
    <% } %>
  </div>
</main>

<%- include('../partials/layoutEnd', { extraScripts: ['/js/admin.js'] }) %>


<div id="adminOrderModal" style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; z-index: 9999; display: none; align-items: center; justify-content: center; padding: 1rem;">
  <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: rgba(15, 23, 42, 0.6); backdrop-filter: blur(4px);" id="adminOrderModalBackdrop"></div>
  <div style="position: relative; width: 100%; max-width: 42rem; border-radius: 1rem; padding: 1.5rem; box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.3); max-height: 85vh; overflow-y: auto;" class="bg-white dark:bg-slate-900">
    <div class="mb-4 flex items-center justify-between">
      <h2 class="text-lg font-semibold text-slate-900 dark:text-slate-50">Szczeg√≥≈Çy zam√≥wienia</h2>
      <button id="adminOrderModalClose" class="rounded-md p-1 text-slate-500 hover:bg-slate-100 hover:text-slate-900 dark:text-slate-400 dark:hover:bg-slate-800" aria-label="Zamknij modal">‚úï</button>
    </div>
    <div id="adminOrderModalContent" class="space-y-4 text-sm text-slate-700 dark:text-slate-300"></div>
    <div class="mt-6 flex justify-end gap-3">
      <button id="adminOrderModalOk" class="rounded-lg bg-slate-600 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-slate-400 dark:focus:ring-slate-600">Zamknij</button>
    </div>
  </div>
</div>
